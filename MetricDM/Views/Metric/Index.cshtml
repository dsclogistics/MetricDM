@model IEnumerable<MetricDM.Models.MTRC_METRIC>
@{ ViewBag.Title = "DSC Metrics"; }


<h2>DSC Metrics Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (((List<MetricDM.Models.MTRC_METRIC>)Model).Count > 0)
{
   <div>
      <table class="table table-condensed table-hover table-responsive ">
          <tr>
              <th> @Html.DisplayNameFor(model => model.mtrc_name)  </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_token) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_desc)  </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_eff_start_dt) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_eff_end_dt) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_min_val) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_max_val) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_max_dec_places) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_max_str_size) </th>
              <th> @Html.DisplayNameFor(model => model.mtrc_na_allow_yn) </th>
              <th> Data Type</th>
              @*<th> @Html.DisplayNameFor(model => model.MTRC_DATA_TYPE.data_type_name)</th>*@
              <th></th>
          </tr>
       @foreach (var item in Model)
       {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.mtrc_name) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_token) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_desc) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_eff_start_dt) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_eff_end_dt) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_min_val) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_max_val) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_max_dec_places) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_max_str_size) </td>
            <td> @Html.DisplayFor(modelItem => item.mtrc_na_allow_yn) </td>
            <td> @Html.DisplayFor(modelItem => item.MTRC_DATA_TYPE.data_type_name) </td>
            <td> @Html.ActionLink("Edit", "Edit", new { id = item.mtrc_id }) </td>
        </tr>
       }
      </table>
   </div>
}
else
{
    <div style="margin:0 auto; border: 4px double red; padding:20px; max-width: 1200px; border-radius:7px">
        NO METRICS FOUND THAT MATCH YOUR SEARCH CRITERIA
    </div>
}


