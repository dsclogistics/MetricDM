@model MetricDM.Models.MtrcAsgnViewModel

<div class="panel-heading">
    <input type="hidden" id="hdnAppUserRoleId" value="@Model.userRoleId" />
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <select name="leftMtrcList" id="unasgndMtrcList" size="10" style="min-width:200px">
            @foreach (var mtrc in Model.unassignedMtrcList)
            {
                <option value="@mtrc.mtrc_period_id">@mtrc.mtrc_period_name</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <div class="row">
            <button type="button" class="btn" id="btnAsgnMtrc">>></button>
        </div>
        <br />
        <div class="row">
            <button type="button" class="btn" id="btnUnasgnMtrc"><<</button>
        </div>
    </div>
    <div class="col-md-4">
        <select name="asgndMtrcList" id="asgndMtrcList" size="10" style="min-width:200px">
            @foreach (var mtrc in Model.userRoleMtrcList)
            {
                <option value="@mtrc.mtrc_period_id">@mtrc.mtrc_period_name</option>
            }
        </select>
    </div>
</div>
